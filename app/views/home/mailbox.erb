<div class="container">
    <br>
    
    <span style="float:right"><a href="/home/index">
        <button type="submit" class="btn btn-success btn-xs" style="align: right;">Home</button>
    </a></span>
    
    <table class="table table-hover">
          <caption><h1 style="text-align: center; color: #006600;"><b>Sent Mail Box</b></h1></caption>
          <thead style="text-align: center; font-size: 18px;">
            <tr class="success">
              <th width="5%"></th>
              <th width="25%">To</th>
              <th width="45%">Title</th>
              <th width="15%">Sent Time</th>
              <th width="10%"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
                <% @posts.each do |p| %>
                <td><%= p.id %></td>
                <td><%= p.email %></td>
                <td><a href="/detail/<%= p.id %>"><%= p.title %></a></td>
                <td><%= p.created_at.to_date %></td>
                <td><a href="/destroy/<%= p.id %>">delete</a></td> <tr>
                <% end %>
            </tr>
          </tbody>
    </table>
    
</div>

