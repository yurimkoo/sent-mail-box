<div class="container" style="margin-top: 20px;">
    
    <span style="float:right"><a href="/home/index">
        <button type="submit" class="btn btn-success btn-xs" style="align: right;">Home</button>
    </a></span>
    
    <h1 style="text-align: center; color: #006600;"><b>Detail</b></h1>

<form action="/mailbox" method="get">
    
  <div class="form-group">
    <label for="exampleInputEmail1" style="font-size: 18px;">Title: </label>
    <type="text" class="form-control" id="exampleInputEmail1" name="title"><%= @one_post.title %>
  </div>
  
  <div class="form-group">
    <label for="exampleInputPassword1" style="font-size: 18px;">To: </label>
    <type="email" class="form-control" id="exampleInputPassword1" name="email"><%= @one_post.email %>
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1" style="font-size: 18px;">Time: </label>
    <type="text" class="form-control" id="exampleInputEmail1" name="time"><%= @one_post.created_at %>
  </div>
  
  <div class="form-group">
    <label for="exampleInputPassword1" style="font-size: 18px;">Content: </label>
    <type="text" class="form-control" id="exampleInputPassword1" row="5" name="content"><%= @one_post.content %>
  </div> <br>
  
  <center><button type="submit" class="btn btn-success btn-lg">Close</button></center>
  
</form>

</div>